{
    "name": "Movie Series reminder",
    "version": "1.0",
    "description": "This extension will not let you forget about the new episode of your favorite series",
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/button_grey_play.png"
        }
    },
    "manifest_version": 2
} 